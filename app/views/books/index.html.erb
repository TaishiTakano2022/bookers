    </tr>
  </thead>

  <% @books.each do |book| %>

  <tbody>
    <tr>
      <td clsaa = title><%= book.title %></td>
      <td class = body><%= book.body %></td>
      <td class = link><%= link_to "Show", book_path(book.id) %></td>
